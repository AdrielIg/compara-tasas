---
import ExchangeTable from '../ExchangeTable/ExchangeTable.astro'

const {title, subtitle, exchanges} = Astro.props
---
    <div class="flex flex-col gap-4 my-6">
        <div class='flex justify-between'>
            <h2 class="text-xl text-gray-800 dark:text-gray-300 font-bold">
                {title}
            </h2>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-xs">
            {subtitle} <a
              class="underline"
              href="https://usdc.ar">USDC.AR</a>.
        </p>
    
    {exchanges.map((exchange) => {
        return <ExchangeTable exchange={exchange} key={exchange.name} />
    })}

    </div>
