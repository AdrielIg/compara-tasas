---
const { name, cotizacion, isLastItem } = Astro.props;
const formattedPrice = new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(cotizacion);
---

<div class="flex justify-between text-sm dark:text-gray-300">
    <p class="font-semibold">{name === "Bolsa" ? "Mep" : name === "Contado con liquidaci√≥n" ? "CCL" : name}
    </p>
    <p>{formattedPrice}</p>
</div>
{!isLastItem && <hr class="border-gray-100 my-1 dark:border-gray-800">}
